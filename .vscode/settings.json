{
  "comment-ts.replaceComments": true,
  "comment-ts.todoComments": true,
  "comment-ts.includeDescriptionTag": true,
  "comment-ts.includeAuthorTag": true,
  "comment-ts.authorName": "Jayesh Kumud",
  "comment-ts.parseNames": true,
  "comment-ts.scoped": true,

  "cucumberautocomplete.steps": ["e2e/src/steps/**/*.ts"],
  "cucumberautocomplete.syncfeatures": "e2e/src/features/*feature",
  "cucumberautocomplete.smartSnippets": true,
  "cucumberautocomplete.stepsInvariants": true,
  "cucumberautocomplete.customParameters": [
    {
      "parameter": "{ab}",
      "value": "(a|b)"
    }
  ],
  "cucumberautocomplete.onTypeFormat": true,
  "editor.quickSuggestions": {
    "comments": false,
    "strings": true,
    "other": true
  }
}
