{

  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",

    "resolveJsonModule": true,
    "esModuleInterop": true,
     
    "removeComments": false,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "rootDir": "./",
    "outDir": "./out",
    
    "types": ["jasmine","node"],
    "strict": true
  },

  "exclude": [
    "node_modules/*"
  ]
}