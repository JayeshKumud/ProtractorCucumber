{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "rootDir": "./",
    "outDir": "./out",
    "mapRoot": "./out",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types",
    ],
    "strict": true
  },
  "exclude": [
    "node_modules/*"
  ]
}