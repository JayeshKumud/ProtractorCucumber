{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "rootDir": "./",
    "outDir": "./out",
    // "mapRoot": "./out",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "strict": true
  },
  "exclude": ["node_modules/*"]
}
