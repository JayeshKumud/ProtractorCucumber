{
    "appenders": {
    "console" : {
        "type": "console",
        "category": "console"
    },
    
    "file" : {
        "category": "test-file-appender",
        "type": "file",
        "filename": "logger/debugger/log.log",
        "maxLogSize": 10240,
        "backups": 3,
        "pattern":"%d %p %c %x{user} %m%n"
    }
    },
    "categories": {
        "default" :{"appenders": ["console", "file"], "level": "DEBUG"},
        "file" : {"appenders": ["file"], "level": "DEBUG"}
    }
}